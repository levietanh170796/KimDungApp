<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="tqt.com.kimdungapp.MainActivity">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorBackGroundTitle"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_kimdung"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/kim_dung" />

        <TextView
            android:id="@+id/txt_tilte_truyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_kimdung"
            android:text="Tập Truyện Kiếm Hiệp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tac_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tilte_truyen"
            android:layout_toRightOf="@id/image_kimdung"
            android:text="Tác giả: Kim Dung"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tac_gia"
            android:layout_toRightOf="@id/image_kimdung"
            android:text="Xuất bản: "
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_title"
        android:background="@color/colorWhiteE0"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorWhiteE0"
            android:dividerHeight="5dp"
            android:layout_below="@id/layout_title"></ListView>
    </LinearLayout>


</RelativeLayout>
